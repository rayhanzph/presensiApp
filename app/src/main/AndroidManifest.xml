<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.my.attendance">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_calendar"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_calendar"
        android:supportsRtl="true"
        android:theme="@style/Theme.Attendance"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activity.ProfileKaryawan"></activity>
        <activity android:name=".Activity.RekapPresensi" />
        <activity android:name=".Activity.RequestIzin" />
        <activity android:name=".Activity.MainActivity" />
        <activity android:name=".Activity.HomeKaryawan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>