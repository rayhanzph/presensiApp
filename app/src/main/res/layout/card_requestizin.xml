<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/id_presensi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tgl_pengajuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hari ini"
        android:textSize="12sp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/grayPrimary"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:elevation="8dp"
        android:layout_marginTop="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="20dp">

            <ImageView
                android:id="@+id/img_pulang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pulang"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/jenis_izin"
                android:layout_toRightOf="@+id/img_pulang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:text="Jenis izin"
                android:textColor="@color/darkGreen"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_bold"/>

            <TextView
                android:id="@+id/keterangan_izin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="keterangan izin"
                android:textSize="10sp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/grayPrimary"
                android:layout_below="@+id/jenis_izin"
                android:layout_toRightOf="@id/img_pulang"
                android:layout_marginLeft="14dp"/>

            <TextView
                android:id="@+id/tgl_izin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16 Mei 2021"
                android:textColor="@color/greenPrimary"
                android:fontFamily="@font/roboto_bold"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"/>

            <TextView
                android:id="@+id/status_izin"
                android:layout_below="@+id/tgl_izin"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ditinjau"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/red"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>